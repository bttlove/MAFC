// appsettings.Development.json
// File cấu hình này phải chứa MỘT đối tượng JSON gốc duy nhất.
{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=InsuranceHubDb;Trusted_Connection=True;MultipleActiveResultSets=true",
    "RedisCacheSettings:ConnectionString": "localhost:6379,abortConnect=false"
  },
  "IpWhitelist": {
    "WhitelistedIps": [
      "127.0.0.1",
      "::1" // IPv6 localhost
    ]
  },
  "RateLimiting": {
    "PermitLimit": 5,
    "Window": 10,
    "QueueProcessingOrder": "OldestFirst",
    "QueueLimit": 5
  }
}